<%= simple_form_for(@minijob, html: { class:'form-horizontal' }) do |f| %>
	<%= f.collection_select :category_id, Category.all, :id, :name, {promt: "Choose a category"} %>
  <%= f.input :title, label: "MiniJob Title" %> <br/>
  <%= f.input :description, label: "MiniJob Description" %> <br/>
  <%= f.input :timi, label: "Poso tha kostizei" %>
  <br/>
  <%= f.button :submit %>
<% end %>
